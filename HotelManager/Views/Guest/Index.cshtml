@model List<HotelManager.Models.GuestViewModel>

<div class="container mt-4">
    <h2>Guests</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Call to reception</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in Model)
            {
                <tr>
                    <td>@guest.Name</td>
                    <td>@guest.Email</td>
                    <td>@guest.Phone</td>
                    <td class="text-center align-middle">
                        <a asp-action="CallToReception" asp-route-guestId="@guest.Id" asp-route-id="@ViewData["HotelId"]" class="btn btn-dark btn-sm">
                            <i class="bi bi-telephone"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>