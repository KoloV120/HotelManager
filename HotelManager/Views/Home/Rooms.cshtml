@{
    ViewData["Title"] = "Rooms";
}
@model HotelManager.Data.Models.Room

<div class="text-center">
    <h1 class="display-4">Room</h1>
</div>

<form asp-action="RoomsAdd" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input class="form-control" type="text" asp-for="Id"/>
    </div>

    <div class="form-group">
        <label asp-for="Number">Number</label>
        <input class="form-control" type="number" asp-for="Number" />
    </div>

    <div class="form-group">
        <label asp-for="Type">Type</label>
        <input class="form-control" type="text" asp-for="Type" />
    </div>

    <button type="submit" class="btn btn-primary mt-4">Save</button>
</form>