@model HotelManager.Models.HotelManagerViewModel

@{
    ViewData["Title"] = ViewData["HotelName"] + " - Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">üè® @ViewData["HotelName"]</h2>

    <!-- Navigation Buttons -->
    <div class="mb-5">
        <a asp-controller="Guest" asp-action="Index" class="btn btn-primary me-2">Manage Guests</a>
        <a asp-controller="Room" asp-action="Index" class="btn btn-secondary me-2">Manage Rooms</a>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-success me-2">Manage Bookings</a>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Guests</h5>
                    <p class="card-text display-6">@Model.TotalGuests</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rooms Available</h5>
                    <p class="card-text display-6">@Model.AvailableRooms</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Active Bookings</h5>
                    <p class="card-text display-6">@Model.ActiveBookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body">
                    <h5 class="card-title">Monthly Revenue</h5>
                    <p class="card-text display-6">$@Model.MonthlyRevenue</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Booking Button -->
    <div class="mt-4 mb-5">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addGuestModal">
            <i class="bi bi-plus-circle"></i> New Booking
        </button>
    </div>

    <!-- Add Guest Modal -->
    <div class="modal fade" id="addGuestModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Step 1: Add Guest Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addGuestForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Guest Name</label>
                            <input type="text" class="form-control" name="Name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="Phone" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Continue to Booking</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Booking Modal -->
    <div class="modal fade" id="addBookingModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Step 2: Create Booking</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-controller="HotelManagement" asp-action="AddBooking" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="HotelId" value="@ViewContext.RouteData.Values["id"]" />
                        <input type="hidden" id="GuestId" name="GuestId" />
                        
                        <div class="alert alert-info">
                            Booking for: <span id="guestName"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Room</label>
                            <select name="RoomId" class="form-select" required>
                                <option value="">Select a room...</option>
                                @foreach (var room in Model.ListOfAvailableRooms)
                                {
                                    <option value="@room.Id">Room @room.Number - $@room.PricePerNight/night</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Check-in Date</label>
                            <input type="date" class="form-control" name="CheckIn" required 
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Check-out Date</label>
                            <input type="date" class="form-control" name="CheckOut" required
                                   min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Booking</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Recent Bookings Table -->
    <h4>üìÖ Recent Bookings</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Guest</th>
                <th>Room</th>
                <th>Check-In</th>
                <th>Check-Out</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.RecentBookings)
            {
                <tr>
                    <td>@booking.GuestName</td>
                    <td>@booking.RoomNumber</td>
                    <td>@booking.CheckIn.ToShortDateString()</td>
                    <td>@booking.CheckOut.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.getElementById('addGuestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            try {
                const response = await fetch('@Url.Action("AddGuest", "HotelManagement")', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    const result = await response.json();
                    document.getElementById('GuestId').value = result.guestId;
                    document.getElementById('guestName').textContent = formData.get('Name');
                    
                    // Hide guest modal and show booking modal
                    bootstrap.Modal.getInstance(document.getElementById('addGuestModal')).hide();
                    new bootstrap.Modal(document.getElementById('addBookingModal')).show();
                } else {
                    alert('Error creating guest. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error creating guest. Please try again.');
            }
        });

        // Date validation
        const checkInInput = document.querySelector('input[name="CheckIn"]');
        const checkOutInput = document.querySelector('input[name="CheckOut"]');

        checkInInput.addEventListener('change', function() {
            const checkInDate = new Date(this.value);
            const minCheckOut = new Date(checkInDate);
            minCheckOut.setDate(minCheckOut.getDate() + 1);
            
            checkOutInput.min = minCheckOut.toISOString().split('T')[0];
            if (new Date(checkOutInput.value) <= checkInDate) {
                checkOutInput.value = minCheckOut.toISOString().split('T')[0];
            }
        });
    </script>
}